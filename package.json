{
  "name": "@gafreax/csscrunch",
  "version": "1.0.12",
  "description": "Simple CSS Parser to tokenize CSS, merge rules, and optimize it",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist/",
    "start": "ts-node src/launch.ts",
    "lint": "ts-standard src/**/*.ts",
    "lint:fix": "ts-standard --fix src/**/*.ts",
    "prebuild": "npm run clean && ts-standard --fix src/**/*.ts",
    "prepare": "npm run build",
    "test": "jest"
  },
  "author": "Gabriele Fontana",
  "bin": {
    "csscrunch": "dist/src/launch.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/clean-css": "^4.2.11",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "typescript": "^5"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "commander": "^12.1.0"
  }
}
