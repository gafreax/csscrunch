{
  "name": "@gafreax/csscrunch",
  "version": "1.2.12",
  "description": "Simple CSS Parser to tokenize CSS, merge rules, and optimize it",
  "main": "dist/src/index.js",
  "scripts": {
    "prepublish": "pnpm run build",
    "build": "tsc",
    "clean": "rimraf dist/",
    "start": "ts-node src/launch.ts",
    "lint": "ts-standard src/**/*.ts",
    "lint:fix": "ts-standard --fix src/**/*.ts",
    "prebuild": "pnpm run clean && ts-standard --fix src/**/*.ts tests/**/*.ts",
    "prepare": "pnpm run build && husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:exclude-snap": "vitest run -t \"^(?!.*snapshot.*)$\"",
    "test:update-snap": "vitest run --update",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest bench"
  },
  "author": "Gabriele Fontana",
  "bin": {
    "csscrunch": "dist/src/launch.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/clean-css": "^4.2.11",
    "@vitest/coverage-v8": "^4.0.1",
    "benny": "^3.7.1",
    "clean-css": "^5.3.3",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/node": "^24.9.1",
    "commander": "^14.0.1",
    "vitest": "^4.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.52.5"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "vite@>=6.1.0 <6.1.2": ">=6.1.2",
      "vite@>=6.1.0 <6.1.3": ">=6.1.3",
      "vite@>=6.1.0 <6.1.5": ">=6.1.5",
      "vite@>=6.0.0 <=6.1.5": ">=6.1.6",
      "vite@>=6.1.0 <6.1.4": ">=6.1.4",
      "brace-expansion@>=1.0.0 <=1.1.11": ">=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2",
      "vite@>=6.0.0 <=6.3.5": ">=6.3.6",
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
